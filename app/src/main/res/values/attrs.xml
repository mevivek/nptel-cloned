<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartImageView">
        <attr name="shape" format="enum">
            <enum name="square" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="circle" value="3" />
        </attr>
        <attr name="imageUrl" format="string" />
        <attr name="imagePlaceholder" format="reference" />
        <attr name="widthRatio" format="integer" />
        <attr name="heightRation" format="integer" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="highlightEnabled" format="boolean" />
        <attr name="highlightColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="avatarBackgroundColor" format="color" />
        <attr name="mode" format="enum">
            <enum name="initial" value="1" />
            <enum name="image" value="2" />
        </attr>
    </declare-styleable>
</resources>